{
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true
        }
      }
    ],
    "webpack": true
  },
  "projects": {
    "device-client": {
      "type": "library",
      "root": "libs/device-client",
      "entryFile": "index",
      "sourceRoot": "libs/device-client/src",
      "compilerOptions": {
        "tsConfigPath": "libs/device-client/tsconfig.lib.json"
      }
    },
    "example": {
      "type": "application",
      "root": "apps/example",
      "entryFile": "main",
      "sourceRoot": "apps/example/src",
      "compilerOptions": {
        "tsConfigPath": "apps/example/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/nest-typescript-starter"
}